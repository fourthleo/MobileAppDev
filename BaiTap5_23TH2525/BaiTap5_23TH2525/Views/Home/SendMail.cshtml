
@{
    ViewBag.Title = "SendMail";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@model BaiTap5_23TH2525.Models.MailInfo

@{
    ViewBag.Title = "Gửi Email";
}

<h2>Gửi Email</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.From, "Địa chỉ email người gửi")
        @Html.TextBoxFor(model => model.From, new { @class = "form-control", @type = "email", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password, "Mật khẩu")
        @Html.PasswordFor(model => model.Password, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.To, "Địa chỉ email người nhận")
        @Html.TextBoxFor(model => model.To, new { @class = "form-control", @type = "email", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Subject, "Tiêu đề")
        @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Body, "Nội dung")
        @Html.TextAreaFor(model => model.Body, new { @class = "form-control", required = "required", rows = 5 })
    </div>

    <div class="form-group">
        <input type="submit" value="Gửi" class="btn btn-primary" />
    </div>

    if (ViewBag.Message != null)
    {
        <div class="alert alert-info">@ViewBag.Message</div>
    }
}

