
@{
    ViewBag.Title = "Confirm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <style>
        /* Tạo khung bao quanh thông tin */
        .info-box {
            width: 400px;
            border: 1px solid black;
            padding: 20px;
            margin: 0 auto;
            text-align: left;
        }

            /* Căn chỉnh các thông tin */
            .info-box img {
                display: block;
                margin: 0 auto;
                width: 100px;
                height: 100px;
                border-radius: 50%;
            }

            .info-box h2 {
                text-align: center;
            }

            .info-box p {
                margin: 5px 0;
            }

            .info-box .info-label {
                font-weight: bold;
            }

            /* Tạo định dạng cho link */
            .info-box a {
                color: purple;
                text-align: center;
                display: block;
                margin-top: 10px;
                text-decoration: none;
            }
    </style>
</head>
<body>

    <div class="info-box">
        <h2>THÔNG TIN THÀNH VIÊN ĐÃ ĐĂNG KÝ</h2>
        <img src="@ViewBag.Avatar" alt="Avatar" />

        <p><span class="info-label">Mã nhân viên:</span> @ViewBag.EmpID</p>
        <p><span class="info-label">Họ tên:</span> @ViewBag.Name</p>
        <p><span class="info-label">Ngày sinh:</span> @ViewBag.BirthOfDate</p>
        <p><span class="info-label">Email:</span> @ViewBag.Email</p>
        <p><span class="info-label">Mật khẩu:</span> @ViewBag.Password</p>
        <p><span class="info-label">Phòng ban:</span> @ViewBag.Department</p>

        <a href="@Url.Action("Index", "Home")">Quay lại</a>
    </div>

</body>
</html>


